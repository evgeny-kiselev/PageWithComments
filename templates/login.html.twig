{% extends 'base.html.twig' %}

{% block body %}
    <form class="form-group" style="text-align: center; max-width: 330px; margin: auto; padding-top: 5%"
          action='{{ path('login') }}' method="post">
        {% if error %}
            <div class="form-group">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="form-group">
            <h1>Войти</h1>
        </div>
        <div class="form-group">
            <input type="text" name="_username" class="form-control" placeholder="Логин" value="{{ last_username }}"/>
        </div>
        <div class="form-group">
            <input type="password" name="_password" class="form-control" placeholder="Пароль"/>
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-block">Войти</button>
        </div>
    </form>
    <div class="form-group" style="max-width: 330px; margin: auto">
        <button class="btn btn-warning btn-block" onclick='location.href="/register"'
        >Зарегистрироваться</button>
    </div>
{% endblock %}