{% extends 'base.html.twig' %}

{% block title %}Тестовая страница с комментариями{% endblock %}
{% block body %}
    <div class="container">
        <article>
            <div class="row">
                <div class="col">
                    <section style="text-align: center;">
                        <h1>{{ page.title }}</h1>
                        <div style="text-align: right">
                            <button class="btn btn-primary" onclick='location.href="/login"'>Войти</button>
                        </div>
                    </section>
                </div>
            </div>
            <div class="row">
                <section>
                    {{ page.text }}
                </section>
            </div>
            <div class="row">
                <section>
                    <br>
                    <h5 style="text-align: left;">Комментарии к статье</h5>
                    <div>
                        {% if page.comments|length > 0 %}
                            {% for comment in page.comments %}
                                {% include 'comment.html.twig' with {'comment':comment} %}
                            {% endfor %}
                        {% else %}
                            Здесь еще нет ниодного комментария, ваш может быть первым...
                        {% endif %}
                    </div>
                </section>
            </div>
            <div class="row">
                <div class="col"></div>
                <div class="col-6">
                    {% if user_role != 'anon.' %}
                            <form class="form-group">
                                <div class="form-group">
                                    <label for="comment_text">Комментарий:</label>
                                    <textarea class="form-control" id="comment_text"
                                              placeholder="Введите текст комментария" rows="5"></textarea>
                                </div>
                                <div class="form-group" style="text-align: center">
                                    <button class="btn btn-success" style="width: 50%">Отправить</button>
                                </div>
                            </form>
                    {% else %}
                        <div style="margin: auto">Для того чтобы писать комментарии, пожалуйста, авторизуйтесь</div>
                    {% endif %}
                </div>
                <div class="col"></div>
            </div>
        </article>
    </div>

{% endblock %}